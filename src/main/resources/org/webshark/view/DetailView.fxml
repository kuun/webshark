<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.webshark.view.DetailView" minHeight="0.0" minWidth="0.0">
  <children>
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="371.0"
                prefWidth="275.0"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
      <content>
        <VBox>
          <children>
            <Accordion>
              <panes>
                <TitledPane text="General">
                  <content>
                    <AnchorPane>
                      <children>
                        <TableView fx:id="generalHeaderTable" fixedCellSize="24" prefHeight="48"
                                   AnchorPane.bottomAnchor="-10.0" AnchorPane.leftAnchor="-10.0"
                                   AnchorPane.rightAnchor="-10.0" AnchorPane.topAnchor="-10.0">
                          <columns>
                            <TableColumn fx:id="generalColFieldName" prefWidth="75.0"
                                         style="-fx-font-weight: bold;" text="Field name"/>
                            <TableColumn fx:id="generalColFieldValue" prefWidth="75.0" text="Value"/>
                          </columns>
                          <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                          </columnResizePolicy>
                        </TableView>
                      </children>
                    </AnchorPane>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
            <Accordion>
              <panes>
                <TitledPane expanded="false" text="Response Headers">
                  <content>
                    <AnchorPane>
                      <children>
                        <TableView fx:id="responseHeaderTable" fixedCellSize="24" prefHeight="48"
                                   AnchorPane.bottomAnchor="-10.0" AnchorPane.leftAnchor="-10.0"
                                   AnchorPane.rightAnchor="-10.0" AnchorPane.topAnchor="-10.0">
                          <columns>
                            <TableColumn fx:id="requestColFieldName" prefWidth="75.0"
                                         style="-fx-font-weight: bold;" text="Field name"/>
                            <TableColumn fx:id="requestColFieldValue" prefWidth="75.0" text="Value"/>
                          </columns>
                          <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                          </columnResizePolicy>
                        </TableView>
                      </children>
                    </AnchorPane>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
            <Accordion>
              <panes>
                <TitledPane text="Request Headers">
                  <content>
                    <AnchorPane>
                      <children>
                        <TableView fx:id="requestHeaderTable" fixedCellSize="24" prefHeight="48"
                                   AnchorPane.bottomAnchor="-10.0" AnchorPane.leftAnchor="-10.0"
                                   AnchorPane.rightAnchor="-10.0" AnchorPane.topAnchor="-10.0">
                          <columns>
                            <TableColumn fx:id="responseColFieldName" prefWidth="75.0"
                                         style="-fx-font-weight: bold;" text="Field name"/>
                            <TableColumn fx:id="responseColFieldValue" prefWidth="75.0" text="Value"/>
                          </columns>
                          <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                          </columnResizePolicy>
                        </TableView>
                      </children>
                    </AnchorPane>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
          </children>
        </VBox>
      </content>
    </ScrollPane>
  </children>
</AnchorPane>
